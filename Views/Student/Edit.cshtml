@model AIS_RubricFeedbackGenerator.Models.StudentViewModel

@{
    ViewData["Title"] = "Edit Student";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0"><i class="fas fa-user-edit"></i> Edit Student: @Model.StudentId</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <!-- Hidden fields to preserve existing data -->
                    <input type="hidden" asp-for="StudentId" />
                    <input type="hidden" asp-for="CreatedBy" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="StudentId" class="form-label">Student ID</label>
                                <input asp-for="StudentId" class="form-control" readonly />
                                <div class="form-text">Student ID cannot be changed after creation</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Full Name</label>
                                <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="form-text">Used for notifications and communication</div>
                    </div>

                    @if (Model.CreatedAt.HasValue)
                    {
                        <div class="mb-3">
                            <div class="alert alert-info">
                                <small>
                                    <i class="fas fa-info-circle"></i>
                                    <strong>Created:</strong> @Model.CreatedAt.Value.ToString("dd MMM yyyy 'at' HH:mm")
                                    @if (!string.IsNullOrEmpty(Model.CreatedBy))
                                    {
                                        <span>by @Model.CreatedBy</span>
                                    }
                                </small>
                            </div>
                        </div>
                    }

                    <div class="d-flex justify-content-between">
                        <a class="btn btn-secondary" asp-action="Index">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a class="btn btn-outline-info me-2" asp-action="Details" asp-route-id="@Model.StudentId">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Auto-focus on first editable field
            $('#FullName').focus();
        });
    </script>
}