@model AIS_RubricFeedbackGenerator.ViewModels.TaskFormViewModel
@{
    ViewData["Title"] = "Create New Task";
    ViewData["FormAction"] = "Create";
}

<h2 class="mb-2">@ViewData["Title"]</h2>
<form asp-action="@ViewData["FormAction"]" method="post" class="card">
    @await Html.PartialAsync("_TaskForm", Model)
    <div class="card-footer">
		<div class="text-end">
			<button type="submit" class="btn btn-success">Save Task</button>
		</div>
	</div>
</form>

<div class="mt-3">
    <a asp-controller="Task" asp-action="Index" class="btn btn-secondary">
        <i class="fa fa-arrow-left me-1"></i> Back to List
    </a>
</div>
