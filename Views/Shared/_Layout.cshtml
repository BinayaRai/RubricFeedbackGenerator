<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AIS_RubricFeedbackGenerator</title>
	<script>
		// Apply dark mode immediately if user preference is stored
		if (localStorage.getItem('theme') === 'dark') {
		  document.documentElement.setAttribute('data-bs-theme', 'dark');
		}
	</script>
	@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
	<link rel="stylesheet" href="~/lib/bootstrap/v5.3.7/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/datatables/dataTables.bootstrap5.min.css" />
	<link rel="stylesheet" href="~/lib/font-awesome/css/fontawesome.css" />
	<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/AIS_RubricFeedbackGenerator.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AIS_RubricFeedbackGenerator</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Task" asp-action="Index">Tasks</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" asp-controller="Student" asp-action="Index">Students</a>
						</li>
					</ul>
				</div>
				@await Html.PartialAsync("_LoginPartial")
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			<partial name="_AutoBreadcrumb" />
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container d-flex justify-content-between align-items-center">
			<div>
				&copy; 2025 - AIS_RubricFeedbackGenerator -
				<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
			</div>
			<div class="form-check form-switch mb-0 d-flex align-items-center gap-2">
				<input class="form-check-input m-0" type="checkbox" id="darkModeSwitch">
				<label class="form-check-label mb-0" for="darkModeSwitch">Dark Mode</label>
			</div>
		</div>
	</footer>
	<script src="~/lib/jquery/jquery.min.js"></script>
	@* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
	<script src="~/lib/bootstrap/v5.3.7/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/datatables/dataTables.min.js"></script>
	<script src="~/lib/datatables/dataTables.bootstrap5.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script>
		const darkSwitch = document.getElementById('darkModeSwitch');
		if (darkSwitch) {
			// Set toggle state on load
			window.addEventListener('DOMContentLoaded', function () {
				const isDark = localStorage.getItem('theme') === 'dark';
				document.documentElement.setAttribute('data-bs-theme', isDark ? 'dark' : 'light');
				darkSwitch.checked = isDark;
			});

			// Listen for toggle changes
			darkSwitch.addEventListener('change', function () {
				if (this.checked) {
					document.documentElement.setAttribute('data-bs-theme', 'dark');
					localStorage.setItem('theme', 'dark');
				} else {
					document.documentElement.setAttribute('data-bs-theme', 'light');
					localStorage.setItem('theme', 'light');
				}
			});
		}
	</script>
	@RenderSection("Scripts", required: false)
</body>
</html>
